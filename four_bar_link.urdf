<robot name="four_bar_link">
	<material name="blue">
		<color rgba = "0 0 0.8 1"/>
	</material>
	
	<material name="red">
		<color rgba = "0.8 0 0 1"/>
	</material>
	
	<material name="green">
		<color rgba = "0 0.8 0 1"/>
	</material>
	
	<material name="white">
		<color rgba = "1 1 1 1"/>
	</material>
	
	<link name="dummy">
	</link>

	<link name = "link1">
		<visual>
			<geometry>
				<box size ="0.6 0.01 0.08"/>
			</geometry>
			<material name="blue"/>
		</visual>
		<inertial>
			<mass value="1"/>
			<inertia ixx="1e-3" ixy="1e-3" ixz="1e-3" iyy="1e-3" iyz="1e-3" izz="1e-3"/>
		</inertial>
	</link>
	
	<link name = "link2">
		<visual>
			<origin xyz="0.275 0 0" rpy="0 0 0" />
			<geometry>
				<box size ="0.6 0.01 0.08"/>
			</geometry>
			<material name="red"/>
		</visual>
		<inertial>
			<mass value="1"/>
			<inertia ixx="1e-3" ixy="1e-3" ixz="1e-3" iyy="1e-3" iyz="1e-3" izz="1e-3"/>
		</inertial>
	</link>
	
	<link name = "link3">
		<visual>
			<origin xyz="0.275 0 0" rpy="0 0 0" />
			<geometry>
				<box size ="0.6 0.01 0.08"/>
			</geometry>
			<material name="green"/>
		<inertial>
			<mass value="1"/>
			<inertia ixx="1e-3" ixy="1e-3" ixz="1e-3" iyy="1e-3" iyz="1e-3" izz="1e-3"/>
		</inertial>
		</visual>
	</link>
	
	<link name = "link4">
		<visual>
			<origin xyz="0.275 0 0" rpy="0 0 0" />
			<geometry>
				<box size ="0.6 0.01 0.08"/>
			</geometry>
			<material name="white"/>
		</visual>
		<inertial>
			<mass value="1"/>
			<inertia ixx="1e-3" ixy="1e-3" ixz="1e-3" iyy="1e-3" iyz="1e-3" izz="1e-3"/>
		</inertial>
	</link>
	
	<joint name="joint1" type="continuous">
		<parent link="link1" />
		<child link="link2" />
		<origin xyz="0.275 0.01 0" rpy="0 0 0" />
		<axis xyz="0 1 0" />
	</joint>

	<joint name="joint2" type="continuous">
		<parent link="link2" />
		<child link="link3" />
		<origin xyz="0.55 0.01 0" rpy="0 0 0" />
		<axis xyz="0 1 0" />
	</joint>
	
	<joint name="joint3" type="continuous">
		<parent link="link3" />
		<child link="link4" />
		<origin xyz="0.55 -0.01 0" rpy="0 0 0" />
		<axis xyz="0 1 0" />
	</joint>
	
	<joint name="dummy" type="fixed">
		<parent link="dummy"/>
		<child link="link1"/>
	</joint>
</robot>